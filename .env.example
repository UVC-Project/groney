# Environment
NODE_ENV=development

# Database
POSTGRES_PASSWORD=groney_password

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Object Storage (MinIO/S3)
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Service Ports (Local Port:Container Port)
# To avoid exposing ports publicly in production, you can bind to localhost:
# Example: GATEWAY_PORT_MAP=127.0.0.1:3000:3000
POSTGRES_PORT_MAP=5432:5432
REDIS_PORT_MAP=6379:6379
GATEWAY_PORT_MAP=3000:3000
AUTH_PORT_MAP=3001:3001
MASCOT_PORT_MAP=3002:3002
MISSION_PORT_MAP=3003:3003
SUBMISSION_PORT_MAP=3004:3004
SHOP_PORT_MAP=3005:3005
CALCULATION_PORT_MAP=3006:3006
SUPPLY_PORT_MAP=3007:3007
MINIO_PORT_MAP=9000:9000
MINIO_CONSOLE_PORT_MAP=9001:9001
FRONTEND_PORT_MAP=5173:5173

# Frontend
VITE_API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Cloudflare Tunnel
TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Mailer (SMTP)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
