# This file serves as an example of what should be stored in your OCI Vault secret.
# The content of the secret in the vault should be a single string containing 
# these environment variable definitions, which will be eval-ed by launch-on-oracle.sh.

export NODE_ENV='production'

# Database
export POSTGRES_PASSWORD='your_secure_production_password_here'
# DATABASE_URL is optional if you want to override the entire connection string
# export DATABASE_URL='postgresql://groney_user:PASSWORD@postgres:5432/groney'

# JWT
export JWT_SECRET='your_secure_random_jwt_secret_here'

# Object Storage (MinIO/S3)
export S3_ACCESS_KEY='your_production_s3_access_key'
export S3_SECRET_KEY='your_production_s3_secret_key'

# Cloudflare Tunnel
export TUNNEL_TOKEN='your_cloudflare_tunnel_token_here'

# Mailer (SMTP)
export SMTP_USER='your_production_smtp_user'
export SMTP_PASS='your_production_smtp_password'

# Port Mapping Security (Hiding ports from the public IP)
# By adding 127.0.0.1:, these ports are only accessible via the Cloudflare Tunnel.
export POSTGRES_PORT_MAP='127.0.0.1:5432:5432'
export REDIS_PORT_MAP='127.0.0.1:6379:6379'
export GATEWAY_PORT_MAP='127.0.0.1:3000:3000'
export AUTH_PORT_MAP='127.0.0.1:3001:3001'
export MASCOT_PORT_MAP='127.0.0.1:3002:3002'
export MISSION_PORT_MAP='127.0.0.1:3003:3003'
export SUBMISSION_PORT_MAP='127.0.0.1:3004:3004'
export SHOP_PORT_MAP='127.0.0.1:3005:3005'
export CALCULATION_PORT_MAP='127.0.0.1:3006:3006'
export SUPPLY_PORT_MAP='127.0.0.1:3007:3007'
export MINIO_PORT_MAP='127.0.0.1:9000:9000'
export MINIO_CONSOLE_PORT_MAP='127.0.0.1:9001:9001'
export FRONTEND_PORT_MAP='127.0.0.1:5173:5173'
