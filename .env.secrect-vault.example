# This file serves as an example of what should be stored in your OCI Vault secret.
# The content of the secret in the vault should be a single string containing 
# these environment variable definitions, which will be eval-ed by launch-on-oracle.sh.

NODE_ENV="production"

# Database
POSTGRES_PASSWORD="your_secure_production_password_here"
# DATABASE_URL is optional if you want to override the entire connection string
# DATABASE_URL="postgresql://groney_user:PASSWORD@postgres:5432/groney"

# JWT
JWT_SECRET="your_secure_random_jwt_secret_here"

# Object Storage (MinIO/S3)
S3_ACCESS_KEY="your_production_s3_access_key"
S3_SECRET_KEY="your_production_s3_secret_key"

# Cloudflare Tunnel
TUNNEL_TOKEN="your_cloudflare_tunnel_token_here"

# Mailer (SMTP)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_USER="your_production_smtp_user"
SMTP_PASS="your_production_smtp_password"

# PublicURLs
FRONTEND_URL="https://your-domain.com"
VITE_API_URL="https://your-domain.com/api"

# Port Mapping Security (Hiding ports from the public IP)
# By adding 127.0.0.1:, these ports are only accessible via the Cloudflare Tunnel.
POSTGRES_PORT_MAP="127.0.0.1:5432:5432"
REDIS_PORT_MAP="127.0.0.1:6379:6379"
GATEWAY_PORT_MAP="127.0.0.1:3000:3000"
AUTH_PORT_MAP="127.0.0.1:3001:3001"
MASCOT_PORT_MAP="127.0.0.1:3002:3002"
MISSION_PORT_MAP="127.0.0.1:3003:3003"
SUBMISSION_PORT_MAP="127.0.0.1:3004:3004"
SHOP_PORT_MAP="127.0.0.1:3005:3005"
CALCULATION_PORT_MAP="127.0.0.1:3006:3006"
SUPPLY_PORT_MAP="127.0.0.1:3007:3007"
MINIO_PORT_MAP="127.0.0.1:9000:9000"
MINIO_CONSOLE_PORT_MAP="127.0.0.1:9001:9001"
FRONTEND_PORT_MAP="127.0.0.1:5173:5173"
